		public static function toRGB(color:uint):Object
		{
			var rgb:Object = {
				r:(color & 0xff0000) >> 16,
				g:(color & 0x00ff00) >> 8,
				b:color & 0x0000ff }
			return rgb;
		}
		
		public static function toHex(color:Object):uint
		{
			return (color.r << 16) + (color.g <<8) + color.b; 
		}
		
