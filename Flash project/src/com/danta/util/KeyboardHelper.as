package com.danta.util
{
	import flash.display.Sprite;
	import flash.display.Stage;
	import flash.events.Event;
	import flash.events.KeyboardEvent;
	
	/**
	 * Class description here
	 * 
	 * @author	camilosoto	<email>
	 */
	public class KeyboardHelper
	{
		//------------------------------------------------------------------------------
		//
		//  Constants
		//
		//------------------------------------------------------------------------------
		
		//--------------------------------------
		//  Public
		//--------------------------------------
		
		//--------------------------------------
		//  Private
		//--------------------------------------
		
		//------------------------------------------------------------------------------
		//
		//  Static Methods
		//
		//------------------------------------------------------------------------------
		
		public static function initialize(stageReference:Stage):void
		{
			stageRef=stageReference;
			initialized=true;
			stageRef.addEventListener(KeyboardEvent.KEY_DOWN, onKeyDown);
			stageRef.addEventListener(KeyboardEvent.KEY_UP, onKeyUp);
		}
		
		////////////////////////////////////////////////////////////////////////////////
		//
		//  Constructor
		//
		////////////////////////////////////////////////////////////////////////////////
		
		public function KeyboardHelper()
		{
			
		}
		
		//------------------------------------------------------------------------------
		//
		//  Variables
		//
		//------------------------------------------------------------------------------
		
		//--------------------------------------
		//  Public
		//--------------------------------------
		
		public static var initialized:Boolean;
		
		//--------------------------------------
		//  Private
		//--------------------------------------
		
		private static var stageRef:Stage;
		private static var activeKeys:Array=[];
		
		//------------------------------------------------------------------------------
		//
		//  Properties (getters/setters)
		//
		//------------------------------------------------------------------------------
		
		//------------------------------------------------------------------------------
		//
		//  Overriden methods
		//
		//------------------------------------------------------------------------------
		
		//------------------------------------------------------------------------------
		//
		//  Methods
		//
		//------------------------------------------------------------------------------
		
		//--------------------------------------
		//  Public
		//--------------------------------------
		
		public static function isDown(keyCode:int):Boolean
		{
			return (activeKeys[keyCode]==1)
				
		}
		
		//--------------------------------------
		//  Private
		//--------------------------------------
		
		//------------------------------------------------------------------------------
		//
		//  Event Handlers
		//
		//------------------------------------------------------------------------------
		private static function onKeyDown(event:KeyboardEvent):void
		{
			activeKeys[event.keyCode]=1;
		}
		
		private static function onKeyUp(event:KeyboardEvent):void
		{
			activeKeys[event.keyCode]=0;
		}
		
	}
}